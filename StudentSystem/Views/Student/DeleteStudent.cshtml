@model StudentSystem.Models.Student

<div class="card mt-5 shadow-sm">
    <div class="card-body">
        <h3 class="card-title text-danger mb-4">Confirm Delete</h3>

        <p class="mb-4">Are you sure you want to delete this student?</p>

        <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item">
                <strong>Name:</strong> @($"{Model.FirstName} {Model.MiddleName} {Model.LastName}")
            </li>
            <li class="list-group-item">
                <strong>Sex:</strong> @Model.Sex
            </li>
            <li class="list-group-item">
                <strong>Civil Status:</strong> @Model.CivilStatus
            </li>
            <li class="list-group-item">
                <strong>Contact Number:</strong> @Model.Contact
            </li>
            <li class="list-group-item">
                <strong>Address:</strong> @Model.Address
            </li>
        </ul>

        <form asp-action="Delete" asp-controller="Student" method="post" class="d-flex gap-2">
            <input type="hidden" name="id" asp-for="StudentID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-controller="Student" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
